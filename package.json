{
  "name": "get-ci-env",
  "version": "1.3.0",
  "description": "Get and normalize continuous integration service environment variables.",
  "type": "module",
  "main": "./src/main.cjs",
  "exports": {
    "require": "./src/main.cjs",
    "default": "./src/main.mjs"
  },
  "files": [
    "src/main.cjs",
    "src/main.mjs"
  ],
  "scripts": {
    "build": "rollup src/main.mjs --format cjs --file src/main.cjs",
    "test": "node --experimental-modules ./src/test.mjs",
    "test:ci": "npm run test && npm run lint",
    "lint": "npm run prettier -- --check",
    "format": "npm run prettier -- --write",
    "prettier": "prettier src/*.mjs",
    "preversion": "npm test",
    "prepack": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "prettier": "^2.1.2",
    "rollup": "^2.28.2",
    "tape": "^5.0.1"
  },
  "engines": {
    "node": ">= 10"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Siilwyn/get-ci-env.git"
  },
  "author": "Selwyn <talk@selwyn.cc> (https://selwyn.cc/)",
  "license": "ISC",
  "keywords": [
    "ci",
    "env",
    "continuous integration",
    "environment variables",
    "buildkite",
    "circleci",
    "codefresh",
    "gitlab ci",
    "travis ci"
  ]
}
