{
  "name": "get-ci-env",
  "version": "1.0.1",
  "description": "Get and normalize continuous integration service environment variables.",
  "main": "src/main.js",
  "files": [
    "$npm_package_main"
  ],
  "scripts": {
    "test": "node ./src/test.js",
    "test:ci": "npm test && npm run format -- --list-different",
    "format": "prettier --write --single-quote --trailing-comma all src/*.js",
    "preversion": "npm test",
    "postversion": "git push --follow-tags && npm publish"
  },
  "dependencies": {},
  "devDependencies": {
    "prettier": "^1.11.1",
    "tape": "^4.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Siilwyn/get-ci-env.git"
  },
  "author": "Selwyn <talk@selwyn.cc> (https://selwyn.cc/)",
  "license": "GPL-3.0+",
  "keywords": [
    "ci",
    "env",
    "continuous integration",
    "environment variables",
    "circleci",
    "travis ci"
  ]
}
